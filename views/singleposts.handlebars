<link rel="stylesheet" href="/css/singlepost.css">

<button id="modalBtn" type="button" class="btn custom-btn" data-toggle="modal" data-target="#myModal">
  Add Comment
</button>

<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title">Add a Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>       
          <div class="form-group">
            <label for="#post-body">Comment</label>
            <textarea class="form-control" id="post-body" rows="3"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button id="add-post" type="button" class="btn btn-primary" data-id="{{singlePost.id}}">Post!</button>
      </div>
    </div>
  </div>
</div>
<a role="button" class="btn btn-outline-secondary back-button" href="/api/messages">Go Back</a>

<div class="card post-card" style="width: 65rem;">
      <div class="card-header post-name">
    {{singlePost.title}}
  </div>
  <div class="card-body">
    <h6 class="card-subtitle mb-2 text-muted">{{singlePost.topic}}</h6>
    <p class="card-text post-text">{{singlePost.contents}}</p>
  </div>
</div>
<hr class="line">
<h5 class="text-muted comment-section">Comment Section:</h5>
<button id="modalBtn" type="button" class="btn btn-success add-comment" data-toggle="modal" data-target="#myModal">
 âœš Add Comment
</button>
<hr>
{{!-- <div class="row"> --}}
{{#each singlePost.comments as |comments|}}
<div class="card post-card" style="width: 30rem;">
    <div class="card-header">
    Posted By: {{user.user_name}} on {{comments.createdAt}}
  </div>
  <div class="card-body">
    <h5 class="card-text comment-text">{{comments.contents}}</h5>
  </div>
</div>
{{/each}}
